<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
<Script file="BeardleysDiabloOrbsVanilla.lua"/>
     <!-- Generic orb frame for inheritance  -->
    <Frame name="DiabloMod_OrbFrame" framestrata="MEDIUM" parent="UIParent" virtual="true">
        <Size x="256" y="256" />
			<Scripts>
            <OnEvent>
                DiabloMod_OnEvent(event);
            </OnEvent>
        </Scripts>            
    </Frame>
     <!-- Health and Mana Orbs -->
    <Frame name="DiabloMod_HealthOrb" inherits="DiabloMod_OrbFrame" virtual="false">     
         <Anchors>
                <Anchor point="BOTTOM">
                    <Offset>
						<AbsDimension x="-331" y="-1"/>
					</Offset>
                </Anchor>
            </Anchors>
        <Layers>
            <Layer level="OVERLAY">
				<FontString name="DiabloMod_HealthPercentage" inherits="ChatFontNormal" text="">
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="12" y="92" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="DiabloMod_HealthText" inherits="ChatFontNormal" text="">
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="12" y="78" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
				<Texture name ="DiabloMod_RedOrbGloss" file="Interface\Addons\BeardleysDiabloOrbsVanilla\art\orb_gloss">
                    <Size>
                        <AbsDimension x="185" y="185"/>
                    </Size>
                    <TexCoords left="0.0" right="1.0" top="0.0" bottom="1.0"/>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
						        <AbsDimension x="9" y="-2"/>
					        </Offset>
                        </Anchor>
                    </Anchors>    
                </Texture>
			</Layer>
            <Layer level="BACKGROUND">   
                <Texture name ="DiabloMod_RedOrb" file="Interface\Addons\BeardleysDiabloOrbsVanilla\art\blank_orb">
                    <Size>
                        <AbsDimension x="185" y="185"/>
                    </Size>
                    <TexCoords left="0.0" right="1.0" top="1.0" bottom="0.0"/>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
						        <AbsDimension x="9" y="-2"/>
					        </Offset>
                        </Anchor>
                    </Anchors>    
                </Texture>
            </Layer>  
        </Layers>
        <Scripts>
	        <OnLoad>
                BDOV_OnLoad();
	        </OnLoad>
          </Scripts>  
    </Frame>
    <Frame name="DiabloMod_ManaOrb"  inherits="DiabloMod_OrbFrame" virtual="false">    
        <Anchors>
            <Anchor point="BOTTOM">
                <Offset>
					<AbsDimension x="337" y="-1"/>
			    </Offset>
            </Anchor>
        </Anchors>
		<Layers>
            <Layer level="OVERLAY">
				<FontString name="DiabloMod_ManaPercentage" inherits="ChatFontNormal" text="">
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="-15" y="92" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="DiabloMod_ManaText" inherits="ChatFontNormal" text="">
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="-15" y="78" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
				<Texture name ="DiabloMod_BlueOrbGloss" AlphaMode="BLEND" file="Interface\Addons\BeardleysDiabloOrbsVanilla\art\orb_gloss">
                    <Size>
                        <AbsDimension x="185" y="185"/>
                    </Size>
                    <TexCoords left="1.0" right="0.0" top="0.0" bottom="1.0"/>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
						        <AbsDimension x="-17" y="-2"/>
					        </Offset>
                        </Anchor>
                    </Anchors>    
                </Texture> 
            </Layer> 
            <Layer level="BACKGROUND">   
                <Texture name ="DiabloMod_BlueOrb" AlphaMode="BLEND" file="Interface\Addons\BeardleysDiabloOrbsVanilla\art\blank_orb">
                    <Size>
                        <AbsDimension x="185" y="185"/>
                    </Size>
                    <TexCoords left="0.0" right="1.0" top="1.0" bottom="0.0"/>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
						        <AbsDimension x="-17" y="-2"/>
					        </Offset>
                        </Anchor>
                    </Anchors>    
                </Texture>  
            </Layer>       
        </Layers>
    </Frame>
</Ui>